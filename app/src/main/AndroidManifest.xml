<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leon.chess.enginesoex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnginesOEX">
        <activity
            android:name=".MainActivity"
            android:exported="true"/>

        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen">

        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="intent.chess.provider.ENGINE" />
            </intent-filter>


            <meta-data
            android:name="chess.provider.engine.authority"
            android:value="com.kalab.chess.stockfishengine.StockfishEngineProvider" />
    </activity>

    <provider
        android:name=".StockfishEngineProvider"
        android:authorities="com.leon.chess.enginesoex.StockfishEngineProvider"
        android:exported="true" />

    </application>

</manifest>