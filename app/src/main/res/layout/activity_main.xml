<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Android Large - 1 -->

    <!-- Rectangle 1 -->
    <RelativeLayout
        android:id="@+id/android_lar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/android_lar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-229dp" >

        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/arsan_gophe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="90dp"
                android:gravity="top"
                android:fontFamily="@font/potta"
                android:text="@string/arsan_gophe"
                android:textAppearance="@style/arsan_gophe" />
        </ScrollView>

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1" />

        <!-- logoapp 1 -->
        <View
            android:id="@+id/logoapp_1"
            android:layout_width="94dp"
            android:layout_height="86dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/logoapp"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Engines OEX 3.0 -->


    </RelativeLayout>
    <TextView
        android:id="@+id/engines_oex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/engines_oex"
        android:textAppearance="@style/engines_oex"
        android:gravity="top"
        android:fontFamily="@font/potta"
        />
</androidx.constraintlayout.widget.ConstraintLayout>